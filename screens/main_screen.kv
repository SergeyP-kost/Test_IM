<MainScreen>:
    grid_content: grid_layout

    MDBoxLayout:
        orientation: 'vertical'
        spacing: "10dp"
        padding: "10dp"

        MDTopAppBar:

            MDBoxLayout:

                MDLabel:
                    id: user 
                    text: ""
                    font_style: "Subtitle1"   
                    size_hint_y: None
                    halign: 'left'
                    valign: 'center'
                    theme_text_color: 'Primary'
                
                MDLabel:
                    id: subject 
                    text: ""   
                    size_hint_y: None
                    halign: 'right'
                    valign: 'center'
                

        MDLabel:
            text: 'Тестирование'
            font_style: 'H5'
            size_hint_y: None
            height: "60dp"
            halign: 'center'
            theme_text_color: 'Primary'
            bold: True

        ScrollView:
            scroll_type: ['bars', 'content']
            bar_width: "8dp"
            bar_color: app.theme_cls.primary_color

            GridLayout:
                id: grid_layout
                cols: 2
                spacing: "15dp"
                padding: "20dp"
                size_hint_y: None
                height: self.minimum_height
                row_default_height: "60dp"
                row_force_default: False

        MDBoxLayout:
            size_hint_y: None
            height: "60dp"
            spacing: "10dp"
            padding: "10dp"

            MDRaisedButton:
                text: 'Назад к регистрации'
                on_press: 
                    root.manager.current = 'registration'
                size_hint_x: 0.35

            MDRaisedButton:
                id: questions_button
                text: 'Завершить тест'
                on_press: root.accept_answers()
                size_hint_x: 0.4
                md_bg_color: app.theme_cls.accent_color

            Widget:
                size_hint_x: 0.1

            MDRaisedButton:
                text: 'Выход'
                on_press: root.exit_app()
                size_hint_x: 0.15